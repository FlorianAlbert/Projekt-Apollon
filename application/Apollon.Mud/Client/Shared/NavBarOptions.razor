@inject Apollon.Mud.Client.Services.Interfaces.IAuthorizationService AuthorizationService
@inject NavigationManager NavManager

<AuthorizeView>
    <Authorized>
        <li class="nav-item">
            <a class="nav-link text-light" href="/dungeons">Spiele</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" href="/user/dungeons">Deine Dungeons</a>
        </li>
        <!--<li class="nav-item me-0">-->
        @*<a class="nav-link text-light" href="Identity/Account/Manage">Hello, @context.User.Identity.Name!</a>*@
        <!--<a class="nav-link text-light" href="Identity/Account/Manage">context.User.Identity.Name</a>
        </li>-->
        <li class="nav-item">
            <button type="button" class="nav-link btn btn-link text-light" @onclick="LogOutUser">Ausloggen</button>
        </li>
    </Authorized>
    <NotAuthorized>
        <li class="nav-item">
            <a class="nav-link text-light" href="Identity/Account/Register">Registrieren</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" href="Identity/Account/Login">Anmelden</a>
        </li>
    </NotAuthorized>
</AuthorizeView>

@code {
    private void LogOutUser()
    {
        AuthorizationService.LogOut();
        NavManager.NavigateTo("/");
    }
}
